<Window x:Class="ExportElec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Electrode STEP" 
        Height="545" Width="400" 
        ResizeMode="CanMinimize"
        MinWidth="400" MinHeight="54">
    <Grid Width="370" Height="499">
        <Button x:Name="quitter" Content="Quitter"
                Click="Quit_Click"
                Width="72" 
                HorizontalAlignment="Left" Margin="5,5,5,474"/>
        <TextBox x:Name="DocumentNameText"
                Text="Aucun document sélectionné"
                IsReadOnly="True"
                TextWrapping="Wrap"
                     Margin="5,31,5,446"  />
        <ListBox x:Name="ElectrodeList"
                     Margin="5,58,5,110">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" 
                            IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Margin="0,399,0,10">
            <StackPanel>
                <Button x:Name="actualiser" Content="Actualiser" Height="25" Width="360" Click="Button_Click"/>
                <Button x:Name="exporter"
                    Click="SelectFile_Click" Margin="5,5,5,5" Height="25" Content="Exporter"/>
                <Grid>
                    <Button x:Name="parcourir" Content="Parcourir" Margin="5,5,5,5" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Click="parcourir_Click">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <TextBox x:Name="chemin" TextWrapping="Wrap" Text="Chemin d'accés dossier" Margin="61,5,0,5" HorizontalAlignment="Left" Width="304"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
